<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item
        android:state_checked="false">
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="5dp" />
            <solid
                android:color="#fff" />
            <stroke
                android:width="2dp"
                android:color="@color/light_text_disabled" />
        </shape>
    </item>
    <item
        android:state_checked="true">
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="5dp" />
            <solid
                android:color="@color/light_text_disabled" />
        </shape>
    </item>
</selector>